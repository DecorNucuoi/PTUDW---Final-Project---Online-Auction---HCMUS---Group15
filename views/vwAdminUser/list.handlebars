<div class="card shadow-sm">
    <div class="card-header bg-white py-3 d-flex justify-content-between">
        <h5 class="mb-0 text-primary"><i class="bi bi-people-fill"></i> Quản lý Người dùng</h5>
        <div>
            <a href="/admin/users/upgrade-requests" class="btn btn-outline-warning btn-sm fw-bold me-2">
                <i class="bi bi-person-up"></i> Duyệt nâng cấp
            </a>
            <a href="/admin/users/add" class="btn btn-success btn-sm">
                <i class="bi bi-plus-lg"></i> Thêm người dùng
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-light text-center">
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Họ tên</th>
                    <th>Vai trò</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <td class="text-center">{{id}}</td>
                    <td>{{email}}</td>
                    <td>{{full_name}}</td>
                    <td class="text-center">
                        {{#if (isEqual role 2)}}<span class="badge bg-dark">Admin</span>
                        {{else if (isEqual role 1)}}<span class="badge bg-success">Seller</span>
                        {{else}}<span class="badge bg-secondary">Bidder</span>{{/if}}
                    </td>
                    <td class="text-center">
                        <a href="/admin/users/detail/{{id}}" class="btn btn-sm btn-info text-white" title="Xem chi tiết">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a href="/admin/users/edit/{{id}}" class="btn btn-sm btn-primary" title="Sửa">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <form method="post" action="/admin/users/delete" class="d-inline" onsubmit="return confirm('Xóa user này?');">
                            <input type="hidden" name="id" value="{{id}}">
                            <button class="btn btn-sm btn-danger" {{#if (isEqual role 2)}}disabled{{/if}}>
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>