<div class="card shadow-sm">
    <h5 class="card-header bg-white py-3 text-primary">
        <i class="bi bi-pencil-square"></i> Cập nhật thông tin người dùng
    </h5>
    <div class="card-body">
        <form method="post" action="/admin/users/edit">
            <input type="hidden" name="id" value="{{user.id}}">
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Email</label>
                    <input type="email" class="form-control" name="email" value="{{user.email}}" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Mật khẩu mới</label>
                    <input type="text" class="form-control" name="new_password" placeholder="(Bỏ trống nếu không đổi)">
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Họ tên</label>
                    <input type="text" class="form-control" name="full_name" value="{{user.full_name}}" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Vai trò</label>
                    <select class="form-select" name="role">
                        <option value="0" {{#if (isEqual user.role 0)}}selected{{/if}}>Bidder</option>
                        <option value="1" {{#if (isEqual user.role 1)}}selected{{/if}}>Seller</option>
                        <option value="2" {{#if (isEqual user.role 2)}}selected{{/if}}>Admin</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Địa chỉ</label>
                <input type="text" class="form-control" name="address" value="{{user.address}}">
            </div>

            <div class="d-flex justify-content-between">
                <a href="/admin/users" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay lại</a>
                <button type="submit" class="btn btn-primary"><i class="bi bi-save"></i> Lưu thay đổi</button>
            </div>
        </form>
    </div>
</div>