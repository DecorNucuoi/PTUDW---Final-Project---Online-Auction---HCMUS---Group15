<div class="card shadow-sm">
  <div class="card-header bg-white py-3">
    <h5 class="mb-0 text-primary">
      <i class="bi bi-pencil-square me-2"></i> Chỉnh sửa Danh mục
    </h5>
  </div>
  <div class="card-body">
    <form method="post" id="frmEdit">
      <input type="hidden" name="id" value="{{category.id}}">

      <div class="mb-3">
        <label for="txtName" class="form-label fw-bold">Tên danh mục</label>
        <input type="text" class="form-control" id="txtName" name="name" 
               value="{{category.name}}" autofocus required>
      </div>

      <div class="mb-3">
        <label for="selParent" class="form-label fw-bold">Danh mục cha</label>
        <select class="form-select" id="selParent" name="parent_id">
          <option value="">-- Là danh mục gốc (Root) --</option>
          
          {{#each allCategories}}
            {{#if (isNotEqual id ../category.id)}}
                <option value="{{id}}" {{#if (isEqual id ../category.parent_id)}}selected{{/if}}>
                    {{name}}
                </option>
            {{/if}}
          {{/each}}
        </select>
      </div>

      <div class="d-flex justify-content-between align-items-center mt-4">
        <div>
            <a class="btn btn-outline-secondary" href="/admin/categories" role="button">
              <i class="bi bi-arrow-left"></i> Quay lại
            </a>
            
            <button type="submit" class="btn btn-danger ms-2" 
                    formaction="/admin/categories/delete" 
                    onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">
              <i class="bi bi-trash"></i> Xóa
            </button>
        </div>

        <button type="submit" class="btn btn-success">
          <i class="bi bi-check2"></i> Lưu thay đổi
        </button>
      </div>
    </form>
  </div>
</div>