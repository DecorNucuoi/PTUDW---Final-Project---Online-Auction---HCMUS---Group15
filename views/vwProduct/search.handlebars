<div class="container-fluid mt-4 mb-5">
    
    <div class="card shadow-sm mb-4">
        <div class="card-body d-flex flex-wrap justify-content-between align-items-center py-2">
            
            <div class="mb-2 mb-md-0">
                <h5 class="mb-0 text-secondary">
                    K·∫øt qu·∫£ t√¨m ki·∫øm: <span class="text-primary fw-bold">"{{keyword}}"</span>
                </h5>
            </div>

            <div class="d-flex align-items-center">
                <label for="sortSelect" class="me-2 text-nowrap fw-bold"><i class="bi bi-sort-down"></i> S·∫Øp x·∫øp:</label>
                <select class="form-select form-select-sm" id="sortSelect" onchange="searchProducts(1)" style="width: 250px;">
                    <option value="time_desc">‚è≥ Th·ªùi gian k·∫øt th√∫c gi·∫£m d·∫ßn</option>
                    <option value="price_asc">üí∞ Gi√° tƒÉng d·∫ßn</option>
                </select>
            </div>
        </div>
    </div>

    <div id="loading" class="text-center my-5" style="display:none;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>

    <div id="search-container" class="row g-3">
    </div>

    <nav class="mt-5">
