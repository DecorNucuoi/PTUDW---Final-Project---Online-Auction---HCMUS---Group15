<div class="card shadow-sm">
    <div class="card-header bg-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-primary">
                <i class="bi bi-box-seam me-2"></i> Quản lý Sản phẩm
            </h5>
            <a href="/admin" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
        </div>
    </div>

    <div class="card-body">
        {{#if empty}}
            <div class="text-center py-4 text-muted">
                <i class="bi bi-inbox fs-1"></i>
                <p class="mt-2">Chưa có sản phẩm nào trong hệ thống.</p>
            </div>
        {{else}}
            <div class="table-responsive">
                <table class="table align-middle table-hover table-bordered">
                    <thead class="table-light text-center">
                        <tr>
                            <th style="width: 40%">Sản phẩm</th>
                            <th>Giá hiện tại</th>
                            <th>Người bán</th> 
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <a href="/products/detail/{{id}}" target="_blank">
                                        <img src="{{imageFallback imagePath id}}" loading="lazy" width="80" height="80" 
                                             class="rounded me-2 border" 
                                             style="width: 50px; height: 50px; object-fit: cover;"
                                             onerror="this.src='https://placehold.co/50x50?text=No+Img'">
                                    </a>
                                    <div class="text-truncate" style="max-width: 250px;">
                                        <a href="/products/detail/{{id}}" target="_blank" class="text-decoration-none fw-bold text-dark">
                                            {{name}}
                                        </a>
                                        <br>
                                        <small class="text-muted">Đăng ngày: {{created_at}}</small>
                                    </div>
                                </div>
                            </td>
                            
                            <td class="text-danger fw-bold text-end">
                                {{format_currency current_price}}
                            </td>

                            <td>
                                <i class="bi bi-shop"></i> {{seller_name}}
                                <br>
                                <small class="text-muted">ID: {{seller_id}}</small>
                            </td>

                            <td class="text-center">
                                {{#if (isEqual status -1)}}
                                    <span class="badge bg-danger">Đã gỡ bỏ</span>
                                {{else if (isEqual status 0)}}
                                    <span class="badge bg-secondary">Nháp</span>
                                {{else if (isEqual status 1)}}
                                    <span class="badge bg-success">Đang đấu</span>
                                {{else if (isEqual status 2)}}
                                    <span class="badge bg-info">Kết thúc</span>
                                {{/if}}
                            </td>

                            <td class="text-center">
                                <!-- View Detail -->
                                <a href="/admin/products/detail/{{id}}" class="btn btn-sm btn-info mb-1" title="Xem chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                
                                {{#if (isEqual status -1)}}
                                    <!-- Restore button for soft-deleted products -->
                                    <form method="POST" action="/admin/products/restore" class="d-inline">
                                        <input type="hidden" name="id" value="{{id}}">
                                        <button type="submit" class="btn btn-sm btn-success mb-1" title="Khôi phục">
                                            <i class="bi bi-arrow-counterclockwise"></i>
                                        </button>
                                    </form>
                                {{else}}
                                    <!-- Soft delete button - only show if can delete -->
                                    {{#if can_delete}}
                                    <form method="POST" action="/admin/products/soft-delete" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn gỡ bỏ sản phẩm này không?');">
                                        <input type="hidden" name="id" value="{{id}}">
                                        <button type="submit" class="btn btn-sm btn-warning mb-1" title="Gỡ bỏ (đã kết thúc & có đánh giá)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                    {{else}}
                                    <button type="button" class="btn btn-sm btn-secondary mb-1" disabled 
                                            title="{{#if (isEqual status 0)}}Không thể xóa sản phẩm nháp{{else if (isEqual status 1)}}Không thể xóa sản phẩm đang đấu giá{{else}}Chưa đủ điều kiện: Phải kết thúc đấu giá & cả 2 bên đánh giá{{/if}}">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                    {{/if}}
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        {{/if}}
    </div>

    <div class="card-footer text-muted small">
        Tổng cộng: {{products.length}} sản phẩm.
    </div>
</div>

{{#section 'js'}}
<script>
    console.log('[ADMIN PRODUCT] Toast script loaded');
    console.log('[ADMIN PRODUCT] showToast function exists:', typeof showToast);
    
    {{#if successMessage}}
    console.log('[ADMIN PRODUCT] Success message:', {{{json successMessage}}});
    if (typeof showToast === 'function') {
        showToast({{{json successMessage}}}, 'success');
    } else {
        console.error('[ADMIN PRODUCT] showToast function not found!');
    }
    {{else}}
    console.log('[ADMIN PRODUCT] No success message');
    {{/if}}
    
    {{#if errorMessage}}
    console.log('[ADMIN PRODUCT] Error message:', {{{json errorMessage}}});
    if (typeof showToast === 'function') {
        showToast({{{json errorMessage}}}, 'error');
    } else {
        console.error('[ADMIN PRODUCT] showToast function not found!');
    }
    {{else}}
    console.log('[ADMIN PRODUCT] No error message');
    {{/if}}
</script>
{{/section}}