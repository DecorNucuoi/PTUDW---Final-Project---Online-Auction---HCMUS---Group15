<div class="container mt-4 mb-5">
  <div class="row">
    <div class="col-md-3">
      {{> account-sidebar}}
    </div>

    <div class="col-md-9">
      <div class="card shadow-sm">
        <h5 class="card-header bg-white d-flex justify-content-between align-items-center">
          <span class="text-primary">
            <i class="bi bi-shop-window"></i> 
            {{#if pageTitle}}{{pageTitle}}{{else}}Sản phẩm đang bán{{/if}}
          </span>
          
          <a href="/products/upload" class="btn btn-sm btn-primary">
              <i class="bi bi-plus-lg"></i> Đăng mới
          </a>
        </h5>
        
        <div class="card-body">
          {{!-- Filter Buttons --}}
          <div class="btn-group mb-3" role="group" aria-label="Filter sản phẩm">
            <a href="/account/posted" class="btn btn-sm {{#if (isEqual currentFilter 'all')}}btn-primary{{else}}btn-outline-primary{{/if}}">
              <i class="bi bi-list-ul"></i> Tất cả
            </a>
            <a href="/account/posted?filter=active" class="btn btn-sm {{#if (isEqual currentFilter 'active')}}btn-success{{else}}btn-outline-success{{/if}}">
              <i class="bi bi-play-circle"></i> Đang đấu giá
            </a>
            <a href="/account/posted?filter=ended" class="btn btn-sm {{#if (isEqual currentFilter 'ended')}}btn-secondary{{else}}btn-outline-secondary{{/if}}">
              <i class="bi bi-stop-circle"></i> Đã kết thúc
            </a>
          </div>
          {{#if empty}}
            <div class="text-center py-4 text-muted">
                <i class="bi bi-box-seam fs-1"></i>
                <p>Bạn chưa đăng sản phẩm nào.</p>
            </div>
          {{else}}
            <div class="table-responsive">
              <table class="table align-middle table-hover">
                <thead class="table-light">
                    <tr>
                        <th style="width: 40%">Sản phẩm</th>
                        <th>Giá hiện tại</th>
                        <th>Trạng thái</th>
                        <th>Người thắng/Giữ giá</th>
                    </tr>
                </thead>
                <tbody>
                {{#each products}}
                  <tr>
                    <td>
                         <div class="d-flex align-items-center">
                             <a href="/products/detail/{{id}}">
                                <img src="{{#if imagePath}}{{imagePath}}{{else}}/static/imgs/sp/{{id}}/main_thumbs.jpg{{/if}}" class="rounded me-2 border" style="width: 50px; height: 50px; object-fit: cover;">
                             </a>
                             <div class="text-truncate" style="max-width: 200px;">
                                 <a href="/products/detail/{{id}}" class="text-decoration-none fw-bold text-dark">{{name}}</a>
                                 <br>
                                 <small class="text-muted">{{created_at}}</small>
                             </div>
                         </div>
                    </td>
                    
                    <td class="text-danger fw-bold">
                        {{format_currency current_price}}
                    </td>

                    <td>
                        {{#if (isEqual status 1)}}
                            <span class="badge bg-success">Đang đấu</span>
                        {{else if (isEqual status 2)}}
                            <div>
                                <span class="badge bg-secondary mb-1">Đã kết thúc</span>
                                <br>
                                {{#if transaction_status}}
                                    {{#if (isEqual transaction_status 0)}}
                                        <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Chờ thanh toán</span>
                                    {{else if (isEqual transaction_status 1)}}
                                        <span class="badge bg-info text-dark"><i class="bi bi-credit-card-fill"></i> Đã thanh toán</span>
                                    {{else if (isEqual transaction_status 2)}}
                                        <span class="badge bg-primary"><i class="bi bi-truck"></i> Đã gửi hàng</span>
                                    {{else if (isEqual transaction_status 3)}}
                                        <span class="badge bg-purple"><i class="bi bi-check-circle"></i> Đã nhận hàng</span>
                                    {{else if (isEqual transaction_status 4)}}
                                        <span class="badge bg-success"><i class="bi bi-star-fill"></i> Hoàn tất</span>
                                    {{else if (isEqual transaction_status 5)}}
                                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Đã hủy</span>
                                    {{/if}}
                                {{else}}
                                    <span class="badge bg-light text-muted"><i class="bi bi-hourglass"></i> Chưa giao dịch</span>
                                {{/if}}
                            </div>
                        {{else}}
                            <span class="badge bg-dark">Khác</span>
                        {{/if}}
                    </td>

                    <td>
                        {{#if winner_name}}
                            <span class="fw-bold text-primary">{{winner_name}}</span>
                        {{else}}
                            <span class="text-muted fst-italic">Chưa có</span>
                        {{/if}}
                    </td>

                    <td>
                        {{#if (isEqual status 1)}}
                            <a href="/products/edit/{{id}}" class="btn btn-sm btn-warning mb-1" title="Bổ sung mô tả" style="padding: 0.375rem 0.75rem; font-size: 0.8rem;">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                        {{else if (isEqual status 2)}}
                            {{#if winner_id}}
                                {{#if (or (isEqual transaction_status 0) (isEqual transaction_status 1) (isEqual transaction_status 2) (isEqual transaction_status 3))}}
                                    {{!-- Đang trong quá trình giao dịch --}}
                                    <a href="/transaction/{{id}}" class="btn btn-sm btn-primary mb-1 me-1" title="Theo dõi đơn hàng" style="padding: 0.375rem 0.75rem; font-size: 0.8rem;">
                                        <i class="bi bi-truck"></i>
                                    </a>
                                    <a href="/chat/with/{{winner_id}}" class="btn btn-sm btn-success mb-1" title="Chat với người mua" style="padding: 0.375rem 0.75rem; font-size: 0.8rem;">
                                        <i class="bi bi-chat-dots"></i>
                                    </a>
                                {{else if (isEqual transaction_status 4)}}
                                    {{!-- Giao dịch hoàn tất --}}
                                    <a href="/transaction/{{id}}" class="btn btn-sm btn-info mb-1 w-100" title="Cập nhật đánh giá">
                                        <i class="bi bi-pencil-square"></i> Cập nhật đánh giá
                                    </a>
                                {{else}}
                                    {{!-- Chưa có transaction hoặc đã hủy --}}
                                    <a href="/transaction/{{id}}" class="btn btn-sm btn-primary mb-1 me-1" title="Theo dõi đơn hàng" style="padding: 0.375rem 0.75rem; font-size: 0.8rem;">
                                        <i class="bi bi-truck"></i>
                                    </a>
                                    <a href="/chat/with/{{winner_id}}" class="btn btn-sm btn-success mb-1" title="Chat với người mua" style="padding: 0.375rem 0.75rem; font-size: 0.8rem;">
                                        <i class="bi bi-chat-dots"></i>
                                    </a>
                                {{/if}}
                            {{/if}}
                        {{/if}}
                    </td>
                  </tr>
                {{/each}}
                </tbody>
              </table>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="rateWinnerModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="post" action="/account/rate-winner">
          <div class="modal-header">
            <h5 class="modal-title">Đánh giá người thắng</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <p>Người thắng: <strong id="modalWinnerName" class="text-primary"></strong></p>
            <input type="hidden" name="product_id" id="modalProductId">
            <input type="hidden" name="winner_id" id="modalWinnerId">

            <div class="mb-3 text-center">
                <div class="btn-group w-75" role="group">
                    <input type="radio" class="btn-check" name="score" id="w_like" value="1" checked>
                    <label class="btn btn-outline-success" for="w_like"><i class="bi bi-hand-thumbs-up-fill"></i> Like (+1)</label>

                    <input type="radio" class="btn-check" name="score" id="w_dislike" value="-1">
                    <label class="btn btn-outline-danger" for="w_dislike"><i class="bi bi-hand-thumbs-down-fill"></i> Dislike (-1)</label>
                </div>
            </div>
            <div class="mb-3">
                <textarea class="form-control" name="comment" rows="3" placeholder="Nhận xét về người mua..." required></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
          </div>
      </form>
    </div>
  </div>
</div>

{{#section 'js'}}
<script>
    const rateWinnerModal = document.getElementById('rateWinnerModal');
    rateWinnerModal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        document.getElementById('modalProductId').value = button.getAttribute('data-pid');
        document.getElementById('modalWinnerId').value = button.getAttribute('data-wid');
        document.getElementById('modalWinnerName').textContent = button.getAttribute('data-wname');
    });
</script>
{{/section}}
