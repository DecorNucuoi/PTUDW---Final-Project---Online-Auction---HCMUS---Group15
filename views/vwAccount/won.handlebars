<div class="container mt-4 mb-5">
  <div class="row">
    <div class="col-md-3">
      {{> account-sidebar}}
    </div>

    <div class="col-md-9">
      <div class="card shadow-sm">
        <h5 class="card-header bg-white text-success">
          <i class="bi bi-trophy-fill"></i> Sản phẩm đã thắng
        </h5>
        <div class="card-body">
          {{#if empty}}
          <div class="text-center py-4">
            <i class="bi bi-inbox fs-1 text-muted"></i>
            <p class="text-muted mt-2">Bạn chưa thắng sản phẩm nào.</p>
          </div>
          {{else}}
          <div class="table-responsive">
            <table class="table align-middle table-hover">
              <thead class="table-light">
                <tr>
                  <th style="width: 35%">Sản phẩm</th>
                  <th>Giá thắng</th>
                  <th>Trạng thái giao dịch</th>
                  <th>Người bán</th>
                  <th>Hành động</th>
                </tr>
              </thead>
              <tbody>
                {{#each products}}
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <a href="/products/detail/{{id}}">
                        <img src="{{#if imagePath}}{{imagePath}}{{else}}/static/imgs/sp/{{id}}/main_thumbs.jpg{{/if}}" class="rounded me-2"
                          style="width: 50px; height: 50px; object-fit: cover;">
                      </a>
                      <a href="/products/detail/{{id}}" class="text-decoration-none text-dark fw-bold text-truncate"
                        style="max-width: 200px;">
                        {{name}}
                      </a>
                    </div>
                  </td>
                  <td class="text-success fw-bold">{{format_currency current_price}}</td>
                  <td>
                    {{#if transaction_status}}
                      {{#if (isEqual transaction_status 0)}}
                        <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> Chờ thanh toán</span>
                      {{else if (isEqual transaction_status 1)}}
                        <span class="badge bg-info text-dark"><i class="bi bi-credit-card-fill"></i> Đã thanh toán</span>
                      {{else if (isEqual transaction_status 2)}}
                        <span class="badge bg-primary"><i class="bi bi-truck"></i> Đã gửi hàng</span>
                      {{else if (isEqual transaction_status 3)}}
                        <span class="badge bg-purple"><i class="bi bi-check-circle"></i> Đã nhận hàng</span>
                      {{else if (isEqual transaction_status 4)}}
                        <span class="badge bg-success"><i class="bi bi-star-fill"></i> Hoàn tất</span>
                      {{else if (isEqual transaction_status 5)}}
                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Đã hủy</span>
                      {{/if}}
                    {{else}}
                      <span class="badge bg-light text-muted"><i class="bi bi-hourglass"></i> Chưa giao dịch</span>
                    {{/if}}
                  </td>
                  <td><small>Seller #{{seller_id}}</small></td>
                  <td>
                    {{#if (or (isEqual transaction_status 0) (isEqual transaction_status 1) (isEqual transaction_status 2) (isEqual transaction_status 3))}}
                      {{!-- Đang trong quá trình giao dịch --}}
                      <a href="/transaction/{{id}}" class="btn btn-sm btn-primary mb-1 me-1" title="Theo dõi đơn hàng" style="padding: 0.375rem 0.75rem; font-size: 0.8rem;">
                        <i class="bi bi-truck"></i>
                      </a>
                      <a href="/chat/with/{{seller_id}}" class="btn btn-sm btn-success mb-1" title="Chat với người bán" style="padding: 0.375rem 0.75rem; font-size: 0.8rem;">
                        <i class="bi bi-chat-dots"></i>
                      </a>
                    {{else if (isEqual transaction_status 4)}}
                      {{!-- Giao dịch hoàn tất --}}
                      <a href="/transaction/{{id}}" class="btn btn-sm btn-info mb-1 w-100" title="Cập nhật đánh giá">
                        <i class="bi bi-pencil-square"></i> Cập nhật đánh giá
                      </a>
                    {{else}}
                      {{!-- Chưa có transaction hoặc đã hủy --}}
                      <a href="/transaction/{{id}}" class="btn btn-sm btn-primary mb-1 me-1" title="Theo dõi đơn hàng" style="padding: 0.375rem 0.75rem; font-size: 0.8rem;">
                        <i class="bi bi-truck"></i>
                      </a>
                      <a href="/chat/with/{{seller_id}}" class="btn btn-sm btn-success mb-1" title="Chat với người bán" style="padding: 0.375rem 0.75rem; font-size: 0.8rem;">
                        <i class="bi bi-chat-dots"></i>
                      </a>
                    {{/if}}
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="rateModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="post" action="/account/rate-seller">
        <div class="modal-header">
          <h5 class="modal-title fw-bold">Đánh giá người bán</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p>Sản phẩm: <strong id="modalProductName" class="text-primary"></strong></p>

          <input type="hidden" name="product_id" id="modalProductId">
          <input type="hidden" name="seller_id" id="modalSellerId">

          <div class="mb-3 text-center">
            <label class="form-label d-block fw-bold">Mức độ hài lòng</label>
            <div class="btn-group w-75" role="group">
              <input type="radio" class="btn-check" name="score" id="like" value="1" checked>
              <label class="btn btn-outline-success" for="like">
                <i class="bi bi-hand-thumbs-up-fill"></i> Like (+1)
              </label>

              <input type="radio" class="btn-check" name="score" id="dislike" value="-1">
              <label class="btn btn-outline-danger" for="dislike">
                <i class="bi bi-hand-thumbs-down-fill"></i> Dislike (-1)
              </label>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label fw-bold">Nhận xét</label>
            <textarea class="form-control" name="comment" rows="3" placeholder="Nhập nhận xét của bạn về người bán..."
              required></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
          <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
        </div>

        <div class="modal fade" id="contactModal" tabindex="-1" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title fw-bold">Thông tin liên hệ người bán</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body text-center">
                <div class="mb-3">
                  <i class="bi bi-person-circle fs-1 text-primary"></i>
                  <h5 class="mt-2 fw-bold" id="modalSellerName"></h5>
                </div>
                <div class="p-3 bg-light rounded border">
                  <p class="mb-1 text-muted">Email liên hệ:</p>
                  <h4 class="text-success fw-bold" id="modalSellerEmail"></h4>
                </div>
                <hr>
                <p class="small text-muted">Vui lòng liên hệ qua email để hoàn tất thanh toán và giao nhận.</p>

                <a href="#" id="mailtoLink" class="btn btn-outline-primary mb-2 w-100">
                  <i class="bi bi-envelope-fill"></i> Gửi Email
                </a>
                <a href="#" id="chatLink" class="btn btn-success w-100">
                  <i class="bi bi-chat-dots-fill"></i> Chat với Người bán
                </a>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{#section 'js'}}
<script>
  const rateModal = document.getElementById('rateModal');
  rateModal.addEventListener('show.bs.modal', event => {
    const button = event.relatedTarget;

    document.getElementById('modalProductId').value = button.getAttribute('data-pid');
    document.getElementById('modalSellerId').value = button.getAttribute('data-sid');
    document.getElementById('modalProductName').textContent = button.getAttribute('data-pname');
  });

  const contactModal = document.getElementById('contactModal');
  contactModal.addEventListener('show.bs.modal', event => {
    const button = event.relatedTarget;
    const name = button.getAttribute('data-sname');
    const email = button.getAttribute('data-semail');
    const sellerId = button.getAttribute('data-sid'); // Wait, I need seller ID in the button data attributes!

    document.getElementById('modalSellerName').textContent = name;
    document.getElementById('modalSellerEmail').textContent = email;
    document.getElementById('mailtoLink').href = `mailto:${email}`;
    document.getElementById('chatLink').href = `/chat/with/${sellerId}`;
  });
</script>
{{/section}}