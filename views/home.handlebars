{{#section 'css'}}
<style>
    /* CSS để cố định chiều cao ảnh, giúp các card bằng nhau tăm tắp */
    .product-img {
        height: 200px;
        object-fit: cover;
        width: 100%;
    }
    /* Hiệu ứng nhấc nhẹ card khi di chuột */
    .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
    }
</style>
{{/section}}

<div class="card mb-5 shadow-sm">
    <div class="card-header bg-warning bg-opacity-25 border-warning text-dark fw-bold text-uppercase">
        <i class="bi bi-clock-history me-2"></i> Ending Soon
    </div>
    <div class="card-body bg-light">
        <div class="row g-3">
            {{#each top5EndingSoon}}
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 border-0 shadow-sm card-hover">
                    <div class="position-relative">
                        <img src="/static/imgs/sp/{{id}}/main_thumbs.jpg" class="card-img-top product-img" alt="{{name}}">
                        <button class="btn btn-light shadow-sm position-absolute bottom-0 end-0 m-2 rounded-circle btn-watchlist" 
                                style="width: 35px; height: 35px; padding: 0; display: flex; align-items: center; justify-content: center; z-index: 10;"
                                data-id="{{id}}" 
                                title="Thêm vào yêu thích">
                            <i class="bi bi-heart text-danger" style="font-size: 16px;"></i>
                        </button>
                        <span class="position-absolute top-0 end-0 badge bg-danger m-2">Hot</span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title text-truncate fw-bold mb-3" title="{{name}}">
                            <a href="/products/detail/{{id}}" class="text-decoration-none text-dark">{{name}}</a>
                        </h6>
                        
                        <div class="mt-auto">
                            <p class="card-text mb-1 text-muted small text-decoration-line-through">
                                Start: {{format_currency start_price}}
                            </p>
                            <h5 class="card-text text-danger fw-bold mb-2">
                                {{format_currency current_price}}
                            </h5>
                        </div>
                    </div>

                    <div class="card-footer bg-white border-top-0 pt-0">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-danger fw-bold">
                                <i class="bi bi-hourglass-split"></i> {{format_remainingTime end_time}}
                            </small>
                        </div>
                        <a href="/products/detail/{{id}}" class="btn btn-outline-danger w-100 btn-sm">
                            <i class="bi bi-eye"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

